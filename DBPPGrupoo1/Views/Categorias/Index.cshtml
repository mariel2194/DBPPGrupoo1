@model IEnumerable<DBPPGrupoo1.Categoria>

@{
    ViewBag.Title = "Index";
}

<div class="custom">
    <h2>Gestion de Categoria</h2>
    <br />



    <div class="btn-text-left">
        <button type="button" class="btn"> @Html.ActionLink("Agregar Nueva Categoria", "Create")</button>
    </div>

    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.CategoriaID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoriaID })
                </td>
            </tr>
        }

    </table>
</div>